@model NetCoreApp_Models.ViewModels.DogCharacteristicsVM
@using NetCoreApplication_Utility

@{
    var title = "Привязать характеристику к собаке";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.DogCharacteristics.Id != 0)
    {
        title = "Редактировать характеристику к собаке";
        <input asp-for="DogCharacteristics.Id" hidden />
    }
    <div class=" border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="DogCharacteristics.DogId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="DogCharacteristics.DogId" asp-items="@Model.DogSelectList" class="form-select">
                            <option selected>--Выберите собаку--</option>
                        </select>
                        <span asp-validation-for="DogCharacteristics.DogId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="DogCharacteristics.CharacteristicsId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="DogCharacteristics.CharacteristicsId" asp-items="@Model.CharacteristicsSelectList" class="form-select">
                            <option selected>--Выберите характеристику--</option>
                        </select>
                        <span asp-validation-for="DogCharacteristics.CharacteristicsId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="DogCharacteristics.Rating"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DogCharacteristics.Rating" class="form-control" />
                        <span asp-validation-for="DogCharacteristics.Rating" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.DogCharacteristics.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100" value="Обновить" />
                            }
                            else
                            {
                                //create
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Создать" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> <i class="fa-solid fa-right-from-bracket"></i> Назад </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

